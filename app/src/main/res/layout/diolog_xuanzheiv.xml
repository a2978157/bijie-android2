<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/renzheng_quexiao"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="选择图像"
            android:textSize="18sp"
            android:textColor="@color/dianyuanxinxi_edit"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"/>
        <TextView
            android:id="@+id/diolog_paizhao"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="拍照"
            android:textSize="18sp"
            android:textColor="@color/daohang_tv_lan"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"/>
        <TextView
            android:id="@+id/diolog_xiangche"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="从相册选择"
            android:textSize="18sp"
            android:textColor="@color/daohang_tv_lan"
            android:gravity="center"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/diolog_quxiao"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/renzheng_duihuakuangquxiao"/>
</LinearLayout>